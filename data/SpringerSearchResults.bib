isbn="978-3-030-33894-7"
}


@InProceedings{10.1007/978-3-319-91797-9_27,
author="Gon{\c{c}}alves da Silva e Souza, Priscilla
and Canedo, Edna Dias",
editor="Marcus, Aaron
